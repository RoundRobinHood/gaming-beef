<div class="hero">
  <div class="lin-gradient" style="position: absolute; width: 100%; height: 100%; margin: -64px 0px 0px -32px;" data-resolution="[30.0, 10.0]" data-angle="45"></div>
  <h1>Welcome to Gaming Beef!</h1>
  <p class="tagline">Your ultimate hub for epic gaming events and community vibes.</p>
  <a href="/events" class="cta-button">Check Out Events</a>
</div>
<div class="terminal">
  <span class="heading">Terminal</span>
  <span class="content">
    site@gamingbeef.exequtech.com:~/html$ cat upcomingEvents.html<br/>
    cat: upcomingEvents.html: No such file or directory
  </span>
  <span class="cursor">|</span>
</div>
<div class="active-events">
  <h3 class="title">Beef Metrics</h3>
  <span class="no-of-active-events"><%= events.length %></span>
  <p class="description">events currently active</p>
</div>
<div class="active-players">
  <h3 class="title">Beef-o-Meter</h3>
  <div class="beef-o-meter-bar">
    <div class="beef-o-meter-fill" style="--width: <%= (activePlayers / 1000) * 100 %>%"></div>
  </div>
  <%
    let level = "";
    if(activePlayers < 200){
      level = "Very Raw";
    } else if(activePlayers < 400){
      level = "Raw";
    } else if(activePlayers < 600){
      level = "Medium Rare";
    } else if(activePlayers < 800){
      level = "Medium";
    } else {
      level = "Well Done";
    }
  %>
  <span>
    <%= level %>
  </span>
  <p class="cooking-level">
    <%= activePlayers %> players
  </p>
</div>
<div class="previous-winners">
  <h3 class="title">The Butcher</h3>
  <span class="winner-name"><%= previousWinner.name %></span>
  <p class="event-won">Winner of the <%= previousWinner.event %></p>
</div>
